<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050C30"
    android:padding="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F4511E"
        android:padding="10dp"
        android:background="@drawable/circle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/chick"
        android:tint="@color/white" />


    <ImageButton
        android:id="@+id/update_profileimage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/profileImageView"
        android:background="@mipmap/update"
        app:tint="@color/white"
        android:padding="5dp"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="-38dp"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="210dp"/>

    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Default Username"
        android:textColorHint="@color/gray"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_below="@id/profileImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/bioEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameEditText"
        android:background="@drawable/roundertextbox"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:gravity="start"
        android:padding="8dp"
        android:hint="Default Bio"
        android:textColorHint="@color/gray"
        android:textColor="@color/white"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/biotag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~ Bio"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:textSize="18sp"
        android:textColor="#FDD835"
        android:layout_below="@id/bioEditText"/>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="171dp" />

    <TextView
        android:id="@+id/updateProfileButton"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="35dp"
        android:background="@drawable/roundertextbox"
        android:backgroundTint="#F4511E"
        android:defaultFocusHighlightEnabled="true"
        android:gravity="center"
        android:padding="5dp"
        android:text="Update Changes"
        android:textColor="@color/white"
        android:textColorHighlight="@color/teal_700"
        android:textSize="23sp"
        android:textStyle="bold" />
</RelativeLayout>
