<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#050C30"
    tools:context=".ChatWithUserProfile"
    android:padding="16dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#F4511E"
        android:padding="10dp"
        android:background="@drawable/circle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:src="@drawable/chick"
        android:tint="@color/white" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textColorHint="@color/gray"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_below="@id/profileImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"/>

    <TextView
        android:id="@+id/bioTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameTextView"
        android:background="@drawable/roundertextbox"
        android:hint="Hey, there just came across this amazing chat app "
        android:textColorHint="@color/gray"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:gravity="start"
        android:padding="8dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/biotag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~ Bio"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:textSize="18sp"
        android:textColor="#FDD835"
        android:layout_below="@id/bioTextView"/>
    <TextView
        android:id="@+id/phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Number - "
        android:textSize="19sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_below="@id/biotag"/>

    <TextView
        android:id="@+id/likesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Likes on profile: -"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/phonenumber"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/jokespostedTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/likesTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Jokes posted : -"
        android:textColor="@color/white"
        android:textSize="19sp" />
    <TextView
        android:id="@+id/jokesLiked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jokes liked : -"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="19sp"
        android:layout_below="@id/jokespostedTextview"
        android:layout_marginTop="16dp"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/likeprofile"
        android:layout_margin="15dp"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/likeprofile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:defaultFocusHighlightEnabled="true"
        android:background="#050C30"
        android:elevation="15dp"
        android:src="@drawable/heart_"
        android:layout_marginBottom="50dp"/>


</RelativeLayout>
